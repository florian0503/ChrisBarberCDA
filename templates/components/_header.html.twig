<header class="header{% if headerMode %} header--{{ headerMode }}{% endif %}">
  <div class="container-fluid header__container">
    <a href="{{ path('home') }}" class="header__logo">
      <img src="{{ asset('images/logo_chrisbarber.png') }}" alt="ChrisBarber Shop">
    </a>

    <nav class="header__nav">
      <a href="{{ path('home') }}" class="header__nav-link {{ app.request.get('_route') == 'home' ? 'header__nav-link--active' : '' }}">Accueil</a>
      <span class="header__separator" aria-hidden="true"></span>
        <a href="{{ path('reservation') }}" class="header__nav-link {{ app.request.get('_route') starts with 'reservation' ? 'header__nav-link--active' : '' }}">Reservation</a>
      <span class="header__separator" aria-hidden="true"></span>
        <a href="{{ path('app_contact') }}" class="header__nav-link {{ app.request.get('_route') == 'app_contact' ? 'header__nav-link--active' : '' }}">L'Academy</a>
      <span class="header__separator" aria-hidden="true"></span>
      <a href="{{ path('shop') }}" class="header__nav-link {{ app.request.get('_route') == 'shop' ? 'header__nav-link--active' : '' }}">Le shop</a>
    </nav>

    {% if app.user %}
      <a href="{{ path('app_profile') }}" class="header__user-icon" title="Mon profil">
        <img src="{{ asset('images/icon_user.png') }}" alt="Mon profil">
      </a>
      {% else %}
      <a href="{{ path('app_login') }}" class="header__user-icon" title="Connexion">
        <img src="{{ asset('images/icon_user.png') }}" alt="Connexion">
      </a>
    {% endif %}
  </div>
</header>




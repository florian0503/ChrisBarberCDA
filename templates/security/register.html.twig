{% extends 'base.html.twig' %}
{% block title %}Inscription{% endblock %}
{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('build/auth.css') }}">
{% endblock %}

{% block body %}
<div class="auth">
  <h1 class="auth__title">Créer un compte</h1>

  {{ form_start(registrationForm, {attr: {class: 'auth__form'}}) }}
    {{ form_row(registrationForm.email,     {attr: {class: 'auth__form-field'}}) }}
    {{ form_row(registrationForm.firstName, {attr: {class: 'auth__form-field'}}) }}
    {{ form_row(registrationForm.lastName,  {attr: {class: 'auth__form-field'}}) }}
    {{ form_row(registrationForm.phone,     {attr: {class: 'auth__form-field'}}) }}
    {{ form_row(registrationForm.password,  {attr: {class: 'auth__form-field'}}) }}
    <button type="submit" class="auth__submit">S’inscrire</button>
  {{ form_end(registrationForm) }}
</div>
{% endblock %}
